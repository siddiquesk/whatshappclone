<% layout("layouts/boilerplate") %>
<body>
  <h3 class="offset-3 mb-4 mt-3 text-primary-emphasis">Edit your Details</h3>
  <div class="row">
    <div class="col-10 offset-1 col-md-6 offset-md-3">
      <form
        method="POST"
        action="/chats/<%=editchat._id%>?_method=PUT"
        class="needs-validation"
        novalidate>
        <div class="mb-3">
          <label for="msg" class="form-label text-info-emphasis"
            >Edit Your message</label
          >
          <input
            type="text"
            name="msg"
            id="msg"
            class="form-control"
            value="<%=editchat.msg  %>"
            placeholder="Edit Your Message"
            required />
          <div class="valid-feedback">Message Looks good!</div>
        </div>
        <div class="mb-3">
          <label for="image" class="form-label text-info-emphasis"
            >Edit Your image</label
          >
          <input
            type="text"
            name="image"
            placeholder="enter image url"
            class="form-control"
            required />
          <div class="invalid-feedback">Image is compulsory!</div>
        </div>
        <button class="btn btn-danger">Edit Details</button>
      </form>
    </div>
  </div>
</body>
