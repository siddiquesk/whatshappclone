<% layout("layouts/boilerplate") %>
  <body>
    <h2 class="offset-3 mb-3 mt-2 text-primary-emphasis">Craete New Chats</h2>
    <div class="row"> 
      <div class="col-10 offset-1 col-md-6 offset-md-3">
    <form method="POST" action="/chats"  class="needs-validation"
    novalidate>

      <div class="mb-3">
        <label for="from" class="form-label">From</label>
        <input type="text" name="from" id="from" class="form-control" required/> 
        <div class="valid-feedback">Sender Looks good!</div>
      </div>
      <div class="mb-3">
        <label for="to" class="form-label">To</label>
      <input type="text" name="to" id="to" class="form-control" required/> 
      <div class="valid-feedback">Reciver Looks good!</div>
    </div>

    <div class="mb-3">
      <label for="msg" class="form-label">Message</label>
      <textarea name="msg" id="msg" class="form-control"></textarea>
    </div>

      <div class="mb-3">
      <label for="image" class="form-label">Share your image</label>
      <input type="text" name="image" id="image" class="form-control"  placeholder="Enter the image link only"  required/> 
      <div class="invalid-feedback">You can upload only image links</div>
     </div>
      <button class="btn btn-outline-primary">Add chat</button>
    </form>
   </div>
  </div>
  </body>
</html>
